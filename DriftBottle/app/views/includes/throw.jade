//- 扔瓶子的模态框
#throwModal.modal.fade
    .modal-dialog
        .modal-content
            .modal-header
                h4.modal-title 扔瓶子
                    button.close(type="button", data-dismiss="modal") 关闭
            .modal-body
                textarea#content(style="resize:none;",cols=73,rows=5)
            .modal-footer
                button.btn.btn-default(type="button",data-dismiss="modal") 扔出去
                button.btn.btn-default(type="button",data-dismiss="modal") 取消

